{% form_theme form with[_self, 'bootstrap_3_layout.html.twig'] %}
<!DOCTYPE html>
<html lang="pt_BR">
<head>
    <meta charset="utf-8">
    <title>Landing Page</title>

    <link href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.3.5/css/bootstrap.min.css" media="screen"
          rel="stylesheet"/>
</head>
<body>

<div class="container">
    <h1>Company Name</h1>
    <p>
        Address, number <br/>
        City/Province - State<br/>
        ZIP CODE
    </p>
    {% if sended %}

        <div class="alert alert-success">
            The message was sent, thank you for the contact.
        </div>

    {% endif %}

    {% if error %}

        <div class="alert alert-danger">
            The message was not processed, an error found.
        </div>

    {% endif %}
    <form action="" method="post" role="form">
        <div class="form-group">
            {{ form_row(form.name) }}
        </div>
        <div class="form-group">
            {{ form_row(form.email) }}
        </div>
        <div class="form-group">
            {{ form_row(form.phone) }}
        </div>
        <div class="form-group">
            {{ form_row(form.message) }}
        </div>
        {{ form_widget(form) }}
        <div class="form-group">
            <div class="g-recaptcha" data-sitekey="{{ sitekey }}"></div>
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-primary">Send</button>
        </div>
    </form>
</div>
<script src='https://www.google.com/recaptcha/api.js'></script>
</body>
</html>